{
  "styles": [
    {
      "alias": "game",
      "sass": true,
      "src": [
        "node_modules/angularjs-toaster/toaster.css",
        "node_modules/font-awesome/css/font-awesome.min.css",
        "assets/game/sass/**/*.scss"
      ],
      "dest": "dist/css",
      "fileName": "game.min.css"
    }
  ],

  "js": [

    {
      "alias": "game-vendors",
      "src": [
        "node_modules/angular/angular.min.js",
        "node_modules/lodash/index.js",
        "node_modules/angular-animate/angular-animate.min.js",
        "node_modules/moment/moment.js",
        "node_modules/moment/locale/fr.js",
        "node_modules/angular-moment/angular-moment.min.js",
        "node_modules/messageformat/messageformat.js",
        "node_modules/messageformat/locale/fr.js",
        "node_modules/messageformat/locale/en.js",
        "node_modules/angular-translate/dist/angular-translate.min.js",
        "node_modules/angular-translate/dist/angular-translate-interpolation-messageformat/angular-translate-interpolation-messageformat.js",
        "node_modules/angularjs-toaster/toaster.min.js",
        "node_modules/angular-ui-router/release/angular-ui-router.min.js",
        "node_modules/draggable/dist/draggable.min.js",
        "assets/game/vendors/**/*.js"
      ],
      "dest": "dist/js",
      "fileName": "game.vendors.min.js",
      "noUglify":true,
      "lint": false,
      "es6": false
    },

    {
      "alias": "game",
      "src": [
        "assets/game/app.js",
        "assets/game/factories/**/*.js",
        "assets/game/services/**/*.js",
        "assets/game/filters/**/*.js",
        "assets/game/config.js",
        "assets/game/config.router.js",
        "assets/game/modules/**/*.js"
      ],
      "dest": "dist/js",
      "fileName": "game.min.js"
    }
  ],

  "templates": [
    {
      "alias": "game",
      "src": [
        "assets/game/templates/**/*.html",
        "assets/game/modules/**/*.html"
      ],
      "dest": "dist/js",
      "fileName": "game.templates.min.js"
    }
  ],

  "fonts": [
    {
      "alias": "vendors",
      "src": [
        "node_modules/bootstrap/fonts/glyphicons-halflings-regular.*",
        "node_modules/font-awesome/fonts/fontawesome-webfont.*"
      ],
      "dest": "dist/fonts"
    }
  ]
}